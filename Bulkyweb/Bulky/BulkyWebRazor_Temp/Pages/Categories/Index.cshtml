@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/Categories/create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i>   Create New Category
			</a>
		</div>
	</div>

<table class="table table-bordered table-striped" align="center">
	<thead align="center">
		<tr>
			<th>Name</th>
			<th>Display Order</th>
			<th>Action</th>
		
		</tr>
	</thead>
	<tbody align="center">
		@foreach (var obj in Model.CategoriesList.OrderBy(u => u.DisplayOrder))
		{
			<tr>
				<td>@obj.Name</td>
				<td>@obj.DisplayOrder</td>
				<td class="w-75 btn-group" role="group">
					<a asp-page="/Categories/edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"> Edit</i>
					</a>
						<a asp-page="/Categories/delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
							<i class="bi bi-trash3"> Delete</i>
						</a>
				</td>
					
			</tr>
		}
	</tbody>
</table>
</div>